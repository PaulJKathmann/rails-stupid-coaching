<div class="container">
  <h1>Stupid Coaching</h1>
  <p>Ask your coach anything</p>

  <form action="/answer">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group">
      <input type="text" name="question" id="input">
      <input type="submit" value="Ask" id="btn">
    </div>
  </form>
</div>
